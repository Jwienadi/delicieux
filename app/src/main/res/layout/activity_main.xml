<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/homepage"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/homepage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="10dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_marginBottom="30dp"
            android:layout_gravity="center"
            android:src="@drawable/deliciux"/>
        <Button
            android:id="@+id/dropdown"
            android:layout_width="115dp"
            android:layout_height="25dp"
            android:layout_marginLeft="11dp"
            android:background="@drawable/dropdown"
            android:text="@string/loc"
            android:textSize="10dp"
            android:onClick="PopSearch"
            android:textColor="@color/Black"/>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:text="@string/name_loc"
                android:textColor="@color/Black" />
            <EditText
                android:layout_marginTop="20dp"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="11dp"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="@string/search_bar"
                android:textColor="@color/grey"
                android:background="@drawable/background_form">
            </EditText>
            <Button
                android:layout_marginTop="20dp"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:text="@string/comb_kate"
                android:background="@drawable/button_bar"
                android:textColor="@color/Black"
                android:textSize="13dp"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/group_12"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="11dp"
            android:background="@drawable/list_resto"
            android:orientation="horizontal">


            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="166dp"
                android:layout_height="140dp"
                android:src="@drawable/ex" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="190dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/resto_name"
                    android:textColor="@color/Black"
                    android:textSize="16sp">
                </TextView>
                <TextView
                    android:paddingTop="5dp"
                    android:layout_width="190dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/resto_type"
                    android:textColor="@color/Black"
                    android:textSize="14sp">
                </TextView>
                <TextView
                    android:paddingTop="5dp"
                    android:layout_width="190dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/resto_loc"
                    android:textColor="@color/Black"
                    android:textSize="12sp">
                </TextView>
                <RatingBar
                    android:paddingTop="5dp"
                    android:id="@+id/title_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:rating="4.5"
                    style="?android:attr/ratingBarStyleSmall"
                    android:progressTint="@color/DefaultOrange"
                    />
            </LinearLayout>



        </LinearLayout>
        <LinearLayout
            android:id="@+id/group_13"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="11dp"
            android:background="@drawable/list_resto"
            android:orientation="horizontal">


            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="166dp"
                android:layout_height="140dp"
                android:src="@drawable/ex" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="190dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/resto_name"
                    android:textColor="@color/Black"
                    android:textSize="16sp">
                </TextView>
                <TextView
                    android:paddingTop="5dp"
                    android:layout_width="190dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/resto_type"
                    android:textColor="@color/Black"
                    android:textSize="14sp">
                </TextView>
                <TextView
                    android:paddingTop="5dp"
                    android:layout_width="190dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/resto_loc"
                    android:textColor="@color/Black"
                    android:textSize="12sp">
                </TextView>
                <RatingBar
                    android:paddingTop="5dp"
                    android:id="@+id/title_rating1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:rating="4.5"
                    style="?android:attr/ratingBarStyleSmall"
                    android:progressTint="@color/DefaultOrange"
                    />
            </LinearLayout>



        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
